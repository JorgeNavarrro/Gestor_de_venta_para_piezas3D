<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:Gestor_De_Ventas_Para_Piezas_3D.Modelos"
             x:Class="Gestor_De_Ventas_Para_Piezas_3D.Vistas.CatalogPage"
             Title="Catálogo"
             BackgroundColor="White">

    <Grid RowDefinitions="Auto, Auto, *">

        <!-- 1. ENCABEZADO -->
        <Grid Grid.Row="0" BackgroundColor="#5F8090" HeightRequest="100" Padding="20,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Logo -->
            <Frame HorizontalOptions="Start" CornerRadius="85" HeightRequest="150" WidthRequest="150" Padding="0" IsClippedToBounds="True" BorderColor="Transparent" BackgroundColor="Transparent" HasShadow="False">
                <!-- Asegúrate de que esta imagen exista o usa una de prueba -->
                <Image Source="logo_gestor_base_de_dato.png" Aspect="AspectFit" HorizontalOptions="Center" VerticalOptions="Center"/>
            </Frame>

            <!-- Título -->
            <Frame Grid.Column="1" HorizontalOptions="Center" VerticalOptions="Center" BackgroundColor="White" Padding="40,10" CornerRadius="0">
                <Label Text="Catálogo" FontSize="22" TextColor="Black" FontAttributes="Bold"/>
            </Frame>
        </Grid>

        <!-- 2. SUBTÍTULO -->
        <VerticalStackLayout Grid.Row="1" Padding="20">
            <Label Text="Catálogo de referencias visuales" FontSize="20" HorizontalOptions="Center" TextColor="Black" Margin="0,0,0,5"/>
            <Label Text="Modelos disponibles" FontSize="16" HorizontalOptions="Center" TextColor="Gray"/>
        </VerticalStackLayout>

        <!-- 3. LISTA DE MODELOS -->
        <CollectionView Grid.Row="2" 
                        x:Name="cvCatalogo" 
                        ItemsSource="{Binding CatalogList}" 
                        SelectionMode="Single">

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:ModeloReference">
                    <Frame Margin="10" Padding="10" CornerRadius="10" HasShadow="True" BackgroundColor="#F3F4F6" BorderColor="Gray">
                        <Grid ColumnDefinitions="100, *" RowDefinitions="Auto, Auto, Auto, Auto">

                            <!-- IMAGEN INTELIGENTE -->
                            <Frame Grid.Row="0" Grid.RowSpan="4" Grid.Column="0" HeightRequest="100" WidthRequest="100" CornerRadius="10" Padding="0" IsClippedToBounds="True" BorderColor="Transparent" BackgroundColor="LightGray">
                                <Image Aspect="AspectFill" HorizontalOptions="Fill" VerticalOptions="Fill">
                                    <Image.Style>
                                        <Style TargetType="Image">
                                            <!-- Imagen por defecto si no encuentra coincidencia -->
                                            <Setter Property="Source" Value="dotnet_bot.png" />

                                            <Style.Triggers>
                                                <!-- REGLAS: Si el nombre es X, pon la imagen Y -->
                                                <DataTrigger TargetType="Image" Binding="{Binding Nombre}" Value="Mini Figura Astro">
                                                    <Setter Property="Source" Value="ast2.png" />
                                                </DataTrigger>

                                                <DataTrigger TargetType="Image" Binding="{Binding Nombre}" Value="Soporte Auriculares">
                                                    <Setter Property="Source" Value="soporte.jpg" />
                                                </DataTrigger>

                                                <DataTrigger TargetType="Image" Binding="{Binding Nombre}" Value="Engranes Mecánicos">
                                                    <Setter Property="Source" Value="engranes.jpg" />
                                                </DataTrigger>

                                                <DataTrigger TargetType="Image" Binding="{Binding Nombre}" Value="Llaveros Personalizados">
                                                    <Setter Property="Source" Value="llaveros.jpg" />
                                                </DataTrigger>

                                                <DataTrigger TargetType="Image" Binding="{Binding Nombre}" Value="Figura Dragon">
                                                    <Setter Property="Source" Value="dragon.jpg" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Image.Style>
                                </Image>
                            </Frame>

                            <!-- Info -->
                            <Label Grid.Row="0" Grid.Column="1" Text="{Binding Nombre}" FontAttributes="Bold" FontSize="18" TextColor="#1F2937" Margin="10,0,0,0"/>
                            <Label Grid.Row="1" Grid.Column="1" Text="{Binding Categoria}" FontSize="12" TextColor="Gray" Margin="10,0,0,0" FontAttributes="Italic"/>
                            <Label Grid.Row="2" Grid.Column="1" Text="{Binding Material, StringFormat='Material: {0}'}" FontSize="12" TextColor="Black" Margin="10,5,0,0"/>
                            <Label Grid.Row="3" Grid.Column="1" Text="{Binding Descripcion}" FontSize="12" TextColor="#374151" Margin="10,5,0,0" LineBreakMode="TailTruncation" MaxLines="2"/>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>