<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:Gestor_De_Ventas_Para_Piezas_3D.Modelos"
             x:Class="Gestor_De_Ventas_Para_Piezas_3D.Vistas.InventoryPage"
             Title="Inventario"
             BackgroundColor="White">

    <Grid RowDefinitions="Auto, Auto, Auto, *, Auto">

        <!-- 1. ENCABEZADO -->
        <Grid Grid.Row="0" BackgroundColor="#5F8090" HeightRequest="100" Padding="20,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Logo -->
            <Frame HorizontalOptions="Start" CornerRadius="85" HeightRequest="150" WidthRequest="150" Padding="0" IsClippedToBounds="True" BorderColor="Transparent" BackgroundColor="Transparent" HasShadow="False">
                <Image Source="logo_gestor_base_de_dato.png" Aspect="AspectFit" HorizontalOptions="Center" VerticalOptions="Center"/>
            </Frame>

            <!-- Título -->
            <Frame Grid.Column="1" HorizontalOptions="Center" VerticalOptions="Center" BackgroundColor="White" Padding="40,10" CornerRadius="0">
                <Label Text="Inventario" FontSize="22" TextColor="Black" FontAttributes="Bold"/>
            </Frame>

            <!-- Botón Agregar Nuevo -->
            <Button Grid.Column="2" Text="+ Nuevo" BackgroundColor="#2C3E50" TextColor="White" FontSize="12" HeightRequest="40" HorizontalOptions="End" VerticalOptions="Center" Clicked="BtnAgregar_Clicked"/>
        </Grid>

        <!-- 2. SUBTÍTULO -->
        <VerticalStackLayout Grid.Row="1" Padding="20, 15, 20, 10">
            <Label Text="Control de materiales" FontSize="20" HorizontalOptions="Center" TextColor="Black"/>
        </VerticalStackLayout>

        <!-- 3. ENCABEZADO TABLA -->
        <Grid Grid.Row="2" ColumnDefinitions="30, 3*, 2*, 3*, 1.5*, 2*, 2*, 1.5*, 40" BackgroundColor="#C4D6E2" Padding="10">
            <Label Grid.Column="0" Text="ID" FontAttributes="Bold" TextColor="#1F2937" FontSize="11"/>
            <Label Grid.Column="1" Text="Nombre del Artículo" FontAttributes="Bold" TextColor="#1F2937" FontSize="11"/>
            <Label Grid.Column="2" Text="Categoría" FontAttributes="Bold" TextColor="#1F2937" FontSize="11"/>
            <Label Grid.Column="3" Text="Detalles" FontAttributes="Bold" TextColor="#1F2937" FontSize="11"/>
            <Label Grid.Column="4" Text="Stock" FontAttributes="Bold" TextColor="#1F2937" FontSize="11"/>
            <Label Grid.Column="5" Text="Unidad" FontAttributes="Bold" TextColor="#1F2937" FontSize="11"/>
            <Label Grid.Column="6" Text="Estado" FontAttributes="Bold" TextColor="#1F2937" FontSize="11"/>
            <Label Grid.Column="7" Text="Costo" FontAttributes="Bold" TextColor="#1F2937" FontSize="11"/>
            <Label Grid.Column="8" Text="" />
        </Grid>

        <!-- 4. LISTA DE MATERIALES -->
        <CollectionView Grid.Row="3" x:Name="cvInventario" SelectionMode="Single" SelectionChanged="OnItemSelectionChanged">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:InventarioItem">
                    <Grid ColumnDefinitions="30, 3*, 2*, 3*, 1.5*, 2*, 2*, 1.5*, 40" Padding="10" RowDefinitions="Auto, Auto">
                        <BoxView Grid.Row="1" Grid.ColumnSpan="9" HeightRequest="1" Color="LightGray" Margin="0,5"/>

                        <Label Grid.Row="0" Grid.Column="0" Text="{Binding Id}" VerticalOptions="Center" TextColor="Black" FontSize="11"/>
                        <Label Grid.Row="0" Grid.Column="1" Text="{Binding NombreArticulo}" VerticalOptions="Center" TextColor="Black" FontSize="11" FontAttributes="Bold"/>
                        <Label Grid.Row="0" Grid.Column="2" Text="{Binding Categoria}" VerticalOptions="Center" TextColor="Black" FontSize="11"/>
                        <Label Grid.Row="0" Grid.Column="3" Text="{Binding Detalles}" VerticalOptions="Center" TextColor="Gray" FontSize="10"/>

                        <!-- Stock: El color cambia según la cantidad -->
                        <Label Grid.Row="0" Grid.Column="4" Text="{Binding StockActual}" VerticalOptions="Center" TextColor="{Binding ColorEstado}" FontAttributes="Bold" FontSize="14"/>

                        <Label Grid.Row="0" Grid.Column="5" Text="{Binding Unidad}" VerticalOptions="Center" TextColor="Black" FontSize="11"/>

                        <!-- Estado: El texto cambia (Bajo/Exceso/Ok) y el color también -->
                        <Label Grid.Row="0" Grid.Column="6" Text="{Binding Estado}" VerticalOptions="Center" TextColor="{Binding ColorEstado}" FontAttributes="Bold" FontSize="10" LineBreakMode="WordWrap"/>

                        <Label Grid.Row="0" Grid.Column="7" Text="{Binding PrecioCostoFormateado}" VerticalOptions="Center" TextColor="Black" FontSize="11"/>

                        <!-- Botón Borrar -->
                        <Button Grid.Row="0" Grid.Column="8" Text="X" BackgroundColor="#E74C3C" TextColor="White" HeightRequest="30" WidthRequest="30" Padding="0" CornerRadius="15" Clicked="BtnBorrar_Clicked" CommandParameter="{Binding .}"/>

                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- 5. BOTÓN GENERAR REPORTE -->
        <Button Grid.Row="4" Text="Generar reporte" BackgroundColor="#2C3E50" TextColor="White" CornerRadius="20" WidthRequest="250" HeightRequest="50" Margin="0,10,0,20" Clicked="BtnGenerarReporte_Clicked"/>

    </Grid>
</ContentPage>