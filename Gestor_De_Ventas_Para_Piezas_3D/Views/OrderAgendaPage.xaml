<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Gestor_De_Ventas_Para_Piezas_3D.Vistas.OrderAgendaPage"
             Title="Agenda de Pedidos"
             BackgroundColor="White">

    <Grid RowDefinitions="Auto, Auto, Auto, *">

        <!-- 1. ENCABEZADO SUPERIOR -->
        <Grid Grid.Row="0" BackgroundColor="#5F8090" HeightRequest="120" Padding="20,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Logo -->
            <Frame HorizontalOptions="Start" 
                   CornerRadius="85"       
                   HeightRequest="150"      
                   WidthRequest="150"       
                   Padding="0" 
                   IsClippedToBounds="True" 
                   BorderColor="Transparent"
                   BackgroundColor="Transparent" 
                   HasShadow="False">
                <Image Source="logo_gestor_base_de_dato.png" 
                       Aspect="AspectFit"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"/>
            </Frame>

            <!-- TÃ­tulo Central -->
            <Frame Grid.Column="1" HorizontalOptions="Center" VerticalOptions="Center" BackgroundColor="White" Padding="30,10" CornerRadius="0">
                <Label Text="Agenda de pedidos" FontSize="22" TextColor="Black" FontAttributes="Bold"/>
            </Frame>
        </Grid>

        <!-- 2. BARRA DE BÃšSQUEDA -->
        <VerticalStackLayout Grid.Row="1" Padding="20, 20, 20, 10" Spacing="15">
            <Frame CornerRadius="25" Padding="10,0" HeightRequest="50" BorderColor="#1F2937" HasShadow="False" BackgroundColor="White">
                <Grid ColumnDefinitions="*, Auto">
                    <Entry x:Name="txtSearch"
                           Placeholder="Buscar por Cliente o Producto" 
                           PlaceholderColor="Gray" 
                           TextColor="Black" 
                           VerticalOptions="Center"
                           TextChanged="OnSearchBarTextChanged"/>
                    <Label Grid.Column="1" Text="ðŸ”" FontSize="20" VerticalOptions="Center" TextColor="#8E44AD" Margin="0,0,10,0"/>
                </Grid>
            </Frame>

            <Label Text="Selecciona un pedido para editarlo" FontSize="20" HorizontalOptions="Center" TextColor="Black"/>
        </VerticalStackLayout>

        <!-- 3. ENCABEZADO DE LA TABLA (Gris Azulado) -->
        <Grid Grid.Row="2" 
              ColumnDefinitions="40, 2.5*, 2*, 2.5*, 2*, 2.5*, 2*" 
              BackgroundColor="#C4D6E2" 
              Padding="10">
            <Label Grid.Column="0" Text="ID" FontAttributes="Bold" TextColor="#1F2937"/>
            <Label Grid.Column="1" Text="Cliente" FontAttributes="Bold" TextColor="#1F2937"/>
            <Label Grid.Column="2" Text="Producto" FontAttributes="Bold" TextColor="#1F2937"/>
            <Label Grid.Column="3" Text="Fecha de entrega" FontAttributes="Bold" TextColor="#1F2937"/>
            <Label Grid.Column="4" Text="Estado" FontAttributes="Bold" TextColor="#1F2937"/>
            <Label Grid.Column="5" Text="Fecha de inicio" FontAttributes="Bold" TextColor="#1F2937"/>
            <Label Grid.Column="6" Text="DuraciÃ³n" FontAttributes="Bold" TextColor="#1F2937"/>
        </Grid>

        <!-- 4. LISTA DE PEDIDOS (Desde Base de Datos) -->
        <CollectionView Grid.Row="3" x:Name="cvPedidos" SelectionMode="Single" SelectionChanged="OnPedidoSelectionChanged">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid ColumnDefinitions="40, 2.5*, 2*, 2.5*, 2*, 2.5*, 2*" Padding="10" RowDefinitions="Auto, Auto">

                        <BoxView Grid.Row="1" Grid.ColumnSpan="7" HeightRequest="1" Color="LightGray" Margin="0,5"/>

                        <!-- ID -->
                        <Label Grid.Row="0" Grid.Column="0" Text="{Binding Id}" VerticalOptions="Center" TextColor="Black"/>

                        <!-- Cliente -->
                        <Label Grid.Row="0" Grid.Column="1" Text="{Binding Cliente}" VerticalOptions="Center" TextColor="Black"/>

                        <!-- Producto -->
                        <Label Grid.Row="0" Grid.Column="2" Text="{Binding Producto}" VerticalOptions="Center" TextColor="Black"/>

                        <!-- Fecha Entrega (Fondo Gris) -->
                        <Frame Grid.Row="0" Grid.Column="3" BackgroundColor="#E5E7EB" Padding="8,2" CornerRadius="10" HorizontalOptions="Start" BorderColor="Transparent" HasShadow="False">
                            <Label Text="{Binding FechaEntrega}" FontSize="12" TextColor="Black"/>
                        </Frame>

                        <!-- Estado -->
                        <Label Grid.Row="0" Grid.Column="4" Text="{Binding Estado}" VerticalOptions="Center" TextColor="Black"/>

                        <!-- Fecha Inicio (Fondo Gris) -->
                        <Frame Grid.Row="0" Grid.Column="5" BackgroundColor="#E5E7EB" Padding="8,2" CornerRadius="10" HorizontalOptions="Start" BorderColor="Transparent" HasShadow="False">
                            <Label Text="{Binding FechaSolicitud}" FontSize="12" TextColor="Black"/>
                        </Frame>

                        <!-- DuraciÃ³n con Icono -->
                        <HorizontalStackLayout Grid.Row="0" Grid.Column="6" Spacing="5" VerticalOptions="Center">
                            <Label Text="ðŸ“…" FontSize="16" TextColor="#7B68EE"/>
                            <Label Text="{Binding Duracion}" TextColor="Black"/>
                        </HorizontalStackLayout>

                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>