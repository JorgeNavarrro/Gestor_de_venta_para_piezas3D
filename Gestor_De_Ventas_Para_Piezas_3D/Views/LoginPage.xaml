                           Margin="0,5,0,15">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnOlvidePassClicked"/>
                        </Label.GestureRecognizers>
                    </Label>

                    <!-- Botones -->
                    <Grid ColumnDefinitions="*, *" ColumnSpacing="15">
                        <!-- BotÃ³n Nuevo Usuario -->
                        <Button Grid.Column="0"
                                Text="Nuevo usuario" 
                                Clicked="OnRegisterClicked" 
                                BackgroundColor="#34495E" 
                                TextColor="White" 
                                FontAttributes="Bold"
                                CornerRadius="20"
                                HeightRequest="50"
                                FontSize="14"/>

                        <!-- BotÃ³n Ingresar -->
                        <Button Grid.Column="1"
                                Text="Ingresar" 
