                       Margin="15"/>
            </Frame>

            <!-- Tarjeta Blanca de Login -->
            <Frame BackgroundColor="White" 
                   CornerRadius="20" 
                   Margin="40,0" 
                   Padding="30"
                   HasShadow="True"
                   BorderColor="Transparent">

                <VerticalStackLayout Spacing="15">

                    <!-- Campo USUARIO con Icono -->
                    <Grid ColumnDefinitions="50, *" RowDefinitions="Auto, Auto">
                        <!-- Icono Usuario (Izquierda) -->
                        <!-- Usamos un Label con un caracter Unicode de usuario o una imagen si tienes icono -->
                        <Label Grid.Row="0" Grid.RowSpan="2" Grid.Column="0" 
