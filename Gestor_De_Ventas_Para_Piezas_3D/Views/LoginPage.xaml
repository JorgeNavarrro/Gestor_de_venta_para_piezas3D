                               Text="Usuario" 
                               TextColor="Black" 
                               FontAttributes="Bold" 
                               FontSize="16" 
                               HorizontalOptions="Center"/>

                        <!-- Entry -->
                        <Frame Grid.Row="1" Grid.Column="1" 
                               BackgroundColor="#F2EBE5" 
                               CornerRadius="20" 
                               Padding="15,0" 
                               HeightRequest="45"
                               BorderColor="Transparent">
                            <Entry x:Name="txtUser" 
                                   Placeholder="Ej. usuario1" 
                                   PlaceholderColor="Gray"
                                   TextColor="Black"
                                   VerticalOptions="Center"/>
                        </Frame>
                    </Grid>

                    <!-- Campo CONTRASEÃ‘A con Icono -->
                    <Grid ColumnDefinitions="50, *" RowDefinitions="Auto, Auto" Margin="0,10,0,0">
                        <!-- Icono Candado -->
                        <Label Grid.Row="0" Grid.RowSpan="2" Grid.Column="0" 
                               Text="ðŸ”’" 
                               FontSize="40" 
                               TextColor="#2D4059"
                               VerticalOptions="Center"
                               HorizontalOptions="Center"/>

                        <!-- TÃ­tulo -->
                        <Label Grid.Row="0" Grid.Column="1" 
                               Text="ContraseÃ±a" 
                               TextColor="Black" 
                               FontAttributes="Bold" 
                               FontSize="16" 
