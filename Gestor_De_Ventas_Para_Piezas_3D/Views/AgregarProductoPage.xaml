<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Gestor_De_Ventas_Para_Piezas_3D.Vistas.AgregarProductoPage"
             Title="Nuevo Producto"
             BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="Agregar Nuevo Producto" 
                   FontSize="22" 
                   FontAttributes="Bold" 
                   TextColor="#2D4059" 
                   HorizontalOptions="Center"/>

            <!-- Campos Normales -->
            <VerticalStackLayout>
                <Label Text="Nombre del Producto" TextColor="Gray"/>
                <Entry x:Name="txtNombre" Placeholder="Ej. Figura Iron Man" TextColor="Black"/>
            </VerticalStackLayout>

            <VerticalStackLayout>
                <Label Text="CategorÃ­a" TextColor="Gray"/>
                <Picker x:Name="pkrCategoria" Title="Selecciona una categorÃ­a" TextColor="Black">
                    <Picker.ItemsSource>
                        <x:Array Type="{x:Type x:String}">
                            <x:String>Coleccionables</x:String>
                            <x:String>Accesorios</x:String>
                            <x:String>Repuestos</x:String>
                            <x:String>Merch</x:String>
                            <x:String>Arte</x:String>
                        </x:Array>
                    </Picker.ItemsSource>
                </Picker>
            </VerticalStackLayout>

            <VerticalStackLayout>
                <Label Text="Material" TextColor="Gray"/>
                <Entry x:Name="txtMaterial" Placeholder="Ej. Resina / PLA" TextColor="Black"/>
            </VerticalStackLayout>

            <VerticalStackLayout>
                <Label Text="DescripciÃ³n" TextColor="Gray"/>
                <Editor x:Name="txtDescripcion" Placeholder="Detalles del producto..." HeightRequest="80" TextColor="Black"/>
            </VerticalStackLayout>

            <!-- SELECCIÃ“N DE IMAGEN (NUEVO) -->
            <VerticalStackLayout Spacing="10">
                <Label Text="Imagen del Producto" TextColor="Gray" FontAttributes="Bold"/>

                <Frame BorderColor="Gray" CornerRadius="10" Padding="0" HeightRequest="200" BackgroundColor="#F0F0F0" HasShadow="False">
                    <Image x:Name="imgPreview" Aspect="AspectFit" Source="dotnet_bot.png" HorizontalOptions="Center" VerticalOptions="Center"/>
                </Frame>

                <Button Text="ðŸ“· Seleccionar Imagen" 
                        Clicked="OnSeleccionarImagenClicked" 
                        BackgroundColor="#546E7A" 
                        TextColor="White"/>
            </VerticalStackLayout>

            <!-- Botones -->
            <HorizontalStackLayout Spacing="15" HorizontalOptions="Center" Margin="0,20,0,0">
                <Button Text="Guardar" 
                        Clicked="OnGuardarClicked" 
                        BackgroundColor="#2D4059" 
                        TextColor="White" 
                        FontAttributes="Bold"
                        WidthRequest="120"/>

                <Button Text="Cancelar" 
                        Clicked="OnCancelarClicked" 
                        BackgroundColor="LightGray" 
                        TextColor="Black"
                        WidthRequest="120"/>
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>